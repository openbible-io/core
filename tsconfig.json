{
	"compilerOptions": {
		"outDir": "dist",
		"rootDir": "src",
		"declaration": true,
		"sourceMap": true,
		"strict": true,
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"isolatedModules": true
	},
	"include": [ "src/**/*.ts" ],
	"exclude": [ "src/**/*.test.ts" ]
}
